        <TextBox x:Name="textBoxDamagekripLeft" HorizontalAlignment="Left" Height="23" Margin="45,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="47" Grid.Column="1"/>
        <TextBox x:Name="textBoxDamagekripRight" HorizontalAlignment="Left" Height="23" Margin="593,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" Grid.Column="1"/>
