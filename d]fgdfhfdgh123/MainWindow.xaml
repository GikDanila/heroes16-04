        <ComboBox  Name="cBoxSelectKripRight" Grid.Column="1" HorizontalAlignment="Left" Margin="519,180,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChangedRight">
            
            <ComboBoxItem Content="Копейщик"/>
            <ComboBoxItem Content="Скелет"/>
            <ComboBoxItem Content="Призрак"/>
        </ComboBox>

        <Button x:Name="clear_button" Content="Очистить " Grid.Column="1" Margin="257,365,381,0" VerticalAlignment="Top" Height="29" FontSize="16" Click="clear_button_Click" RenderTransformOrigin="-2.039,1.019"/>
    </Grid>
